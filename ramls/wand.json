{
  "$schema" : "http://json-schema.org/draft-04/schema#",
  "title" : "Wand",
  "type" : "object",
  "additionalProperties" : false,
  "properties" : {
    "id" : {
      "type" : "string"
    },
    "wood" : {
      "type" : "string",
      "enum" : [ "Ash", "Birch", "Cherry", "Elm", "Ivy", "Maple", "Pine", "Walnut" ]
    },
    "core" : {
      "type" : "string",
      "minLength" : 4,
      "maxLength" : 100
    },
    "strength" : {
      "type" : "integer",
      "minimum" : 0,
      "maximum" : 100
    }
  },
  "required" : [ "wood", "core", "strength" ]
}